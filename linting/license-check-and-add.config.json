{
  "license": "./utils/tooling/headers/StrimziHeader.txt",
  "ignore": [".**", ".git/**", "./utils/tooling/headers", "**.md", "**.pptx"],
  "licenseFormats": {
    "js|ts|tsx|css|scss": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "html|svg": {
      "prepend": "<!-- ",
      "append": "-->",
      "eachLine": {
        "prepend": " "
      }
    },
    "dotfiles|prettierignore|feature": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "defaultFormat": {
    "eachLine": {
      "prepend": "# "
    }
  }
}
